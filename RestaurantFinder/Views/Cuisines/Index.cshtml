@{
  Layout = "_Layout";
}

@using RestaurantFinder.Models;
@model List<RestaurantFinder.Models.Cuisine>; // lowercase model for use in @Html helper statements, references the List we passed into the view

<h1>Cuisines</h1>

@if (@Model.Count == 0)  // using @Model (vs model) since we need to use Razor to reference the specific List we passed into the view
{
  <h3>No categories have been added yet!</h3>
}

<ul>
@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li> // third argument creates new id variable that is equal to that specific cuisine's CuisineId, to be passed into the Details route/method
}
</ul>

<p>@Html.ActionLink("Add a new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>